<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyCup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BaseTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- BaseText -->
    <style name="BaseText">
        <item name ="android:textColor">@color/black</item>
        <item name ="android:textStyle">bold</item>
        <item name ="android:textSize">20sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_loading</item>
    </style>

    <!-- dropDownListViewStyle 추가 -->
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="android:textColor">#000000</item>
        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">30dp</item>
        <item name="listPreferredItemHeightSmall">30dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>

    <!-- searchview text size -->
    <style name = "AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">15dp</item>
    </style>

    <!-- button click -->
    <style name ="BlueRipple">
        <item name = "colorControlHighlight">#0000ff</item>
    </style>

    <!-- 서치뷰 -->
    <!-- 메테리얼테마 -->
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- ... -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorLightPink</item>
    </style>

    <style name="MySwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorLightGray</item>
    </style>
</resources>